{
  "name": "employee360_task_manager",
  "version": "1.0.0",
  "description": "Employee task management application with role-based authentication",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend:prod\"",
    "start:backend": "cd packages/auth/backend && npm start",
    "start:frontend:prod": "cd packages/auth/frontend && npm run preview",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/auth/backend && npm run dev",
    "dev:frontend": "cd packages/auth/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/auth/backend && npm run build",
    "build:frontend": "cd packages/auth/frontend && npm run build",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd packages/auth/backend && npm test",
    "test:frontend": "cd packages/auth/frontend && npm test",
    "test:coverage": "concurrently \"npm run test:backend -- --coverage\" \"npm run test:frontend -- --coverage\"",
    "install:all": "npm install && cd packages/auth/backend && npm install && cd ../frontend && npm install",
    "init": "node init.js",
    "predeploy": "node scripts/update-config.js",
    "deploy": "npm run predeploy && cd packages/auth/backend && npm run start && cd ../../"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "react-icons": "^5.5.0"
  }
}
